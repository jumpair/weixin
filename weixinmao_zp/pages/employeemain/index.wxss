
page{

    background-color: #f5f5f5;

}

.container {
  background-color: #f5f5f5;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:10rpx;
}



.service{

  width: 720rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

  margin-top: 10rpx;
  flex-wrap: wrap;
}
.service .servicelist{

  width:85%;
  height: 175rpx;
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  background: #FF7800;
  border-radius: 10rpx;
}
.service .servicelist .logo{

  width:40%;
  display: flex;
  justify-content: center;
  align-items: center;
  }
.service .servicelist .logo image{

  width:80rpx;
  height: 80rpx;

}
.service .servicelist .name{

  width:60%;
  height: 159rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color:#000000;
}
.service .servicelist .name view:nth-child(1){

    font-size: .9rem;
}

.service .servicelist .name view:nth-child(2){

    font-size: .7rem;
    color: #FFF;
    
    
}

