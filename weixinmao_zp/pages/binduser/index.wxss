.container {
  background-color: #FFF;
  min-height: 100%
}
.container .intro{

font-size: .8rem;
padding-left:5%;
padding-right: 5%;
margin-top: 30rpx;
margin-bottom: 120rpx;

}
.register{
width:750rpx;
display: flex;
flex-direction: column;

}
.register .item{

display: flex;
flex-direction: row;
border-bottom: 2rpx solid #bfbfbf;
padding-top:10rpx;
padding-bottom: 10rpx;
padding-left:40rpx;
}
.register .item text{

  color:#747474;
}
.register .item input{

  width:400rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin-left:20rpx;
}
.register .item button{

  width:200rpx;
  font-size: .7rem;
  height: 80rpx;
  line-height: 80rpx;
  align-self: center;
}

.btnuser{
width:750rpx;
margin-top: 40rpx;
}
.btnuser button{
  width:650rpx;
  align-self:center;
  background: #3274e5;
  color: #FFF;
  font-size: 1rem;
}