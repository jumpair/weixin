/* weixinmao_hssy/pages/orderlist/index.wxss */
page{

  background: #f5f5f5;
}

.container {
  background-color: #f5f5f5;
  min-height: 100%;
}

.moneylist{

  width:750rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}

.moneylist .list{
  width:50%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #FFF;
  font-size: .9rem;
}
.moneylist .list>view{

  height: 75rpx;
  line-height: 75rpx;
   font-weight: 600;
}
.moneylist .list:nth-child(1)
{

  background: #e64340;
 

}

.moneylist .list:nth-child(2)
{

  background: #2de09f;

  
}

.container .orderlist{
  
  width:750rpx;
  display: flex;
  flex-direction: column;
  background: #FFF;
  margin-bottom: 15rpx;
}
.container .orderlist .orderid{
  border-bottom:  1rpx solid #efefef;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: .9rem;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}

.container .orderlist .content{

  font-size: .8rem;
  border-bottom:  1rpx solid #efefef;

}
.container .orderlist .content .item{
    
  padding-top:16rpx;
  padding-bottom: 16rpx;
  padding-left: 20rpx;
   border-bottom:  1rpx dotted #efefef;
   display: flex;
   flex-direction: row;
}
.container .orderlist .content .payitem {
  width:750rpx;
    display: flex;
   flex-direction: row;
   justify-content:flex-end;
    padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.container .orderlist .content .payitem view{
  width:180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 20rpx;
  border-radius: 5rpx;
  background: #3274e5;
  font-size: .6rem;
  color: #FFF;
  
}
.container .orderlist .content .payitem view:nth-child(1){

  background: #e64340;

}

.jobdata{

  color: #999999;
}
.content text{

  color: #2de09f;
  font-weight: 600;
}
.money{

   color: #2de09f;
  font-weight: 600;
}
.listdata{
  margin-right: 30rpx;
  font-size: .7rem;
}

.intro{
padding: 10rpx;
font-size: .8rem;

}

.weixinmao-float{ height: 150rpx;}
.weixinmao-foot{ 
  display:flex; 
  justify-content: center;
  flex-direction:row;
  position: fixed; 
  z-index: 999; 
  left: 0; 
  bottom: 0; 
  width: 100%; 
  }

.weixinmao-foot view{
color:#FFF;
height: 100rpx;
line-height: 100rpx;
font-size: .9rem;
width:100%;
border-radius: 0rpx;
background: #e64340;
text-align: center;
}


