.navlist{
 width:750rpx;
 display: flex;
 justify-content:space-around;
 flex-direction: row;
 padding-top:20rpx;
 flex-wrap: wrap;
 padding-bottom: 20rpx;

}

.navlist .item{
    width:180rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: .7rem;
    padding-bottom: 30rpx;

}
.navlist .item image{
  width:120rpx;
  height: 120rpx;

}


.swiper-container{
  width: 750rpx;
  position: relative;  
}
.swiper_box {
  width: 100%;

}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;

}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}   
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}


.type-container{
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #F2f2f2;
  padding-bottom: 10rpx;
  
}


.type-navbar{
  white-space: nowrap;
  
  height: 88rpx;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:180rpx;
  box-sizing: content-box;
  font-size: 24rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #3274e5;
}



