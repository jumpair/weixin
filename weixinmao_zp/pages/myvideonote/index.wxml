           <view class="list">
              <view class="title"><view>形像照片</view><view>(至少上传3张图,禁止上传不良图片)</view></view>
              <view class="item"> 
                 <view class="uploadimg" bindtap="chooseImg" ><image src="../../resource/images/upload.png"></image>                 <view class="uploadtitle">上传照片最多3张</view>
</view>
              </view>
          </view>


    <view class="list" style='display:{{show}};'>
      <view class='imgsbox'>
      <view class="weui-uploader">
        <view class="img-v">
          <view class="img" wx:for="{{imgs1}}" wx:for-item="item" wx:key="*this">
            <image src="{{item}}" data-index="{{index}}" mode="aspectFill" bindtap="previewImg1"></image>
