      <view class="weui-cell__bd">
        <textarea class="weui-textarea" bindinput="bindTextAreaChange" placeholder="请填写个人介绍..." style="height: 6em" value="{{notevideo.content}}" maxlength="{{noteMaxLen}}" focus   name="content"/>
     
      </view>
    </view>
  </view>
              </view>
          </view>

          





    </view>
</view>
  




<view class="weixinmao-float">
