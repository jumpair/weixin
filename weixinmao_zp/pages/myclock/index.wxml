<!--index.wxml-->
<view class="page">
  <view class="container">
    <view class="pub-box pub-list">
      <view class="pub-text pub-text-item">姓名：{{name}}</view>
      <view class="pub-text pub-text-item">公司名称：{{companyname}}</view>
      <view class="pub-text pub-text-item">本月缺卡：<view class="red">{{outworknum}}</view>次</view>
    </view>
    <view class="pub-box p2 pub-list">
      <view class="p2-01">
        <view class="p2-01-box">
          <view class="cl333">上班 {{starttime}}</view>
          <view class="p2-012">
            <radio checked="true" disabled="" color="{{color}}"/>
            <view class="fs12 cl000">08:00</view>
          </view>
        </view>
        <view class="p2-01-box">
          <view class="cl333">下班 {{endtime}}</view>
          <view class="p2-012">
            <radio checked="true" disabled="" color="{{color}}"/>
            <view class="fs12 cl000">18:00</view>
          </view>
        </view>
      </view>
      <view class="p2-02">
        <view class="daka" bindtap="setDaka">下班打卡</view>
        <view class="text">{{$inrange}}</view>
      </view>
      <view>
        <view class="qj">
          <text class="pub-text">去请假</text>
          <text class="fa fa-angle-right  fa-lg"></text>
        </view>
        <view class="qj">
          <text class="pub-text">本月缺卡记录</text>
         <text class="fa fa-angle-right  fa-lg"></text>
        </view>
      </view>
    </view>
  </view>
</view>