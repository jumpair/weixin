                                            <view class="jobname"> {{item.title}} </view>
                                           
                                              <view>奖金{{item.vprice}}元</view>
                                      </view>

                                <view class="joblable">
                                  <view><block wx:if="{{item.sex==1}}"> 男</block><block wx:elif="{{item.sex==2}}">女</block><block wx:else>男女不限</block>
|{{item.education}}|{{item.age}}</view>
