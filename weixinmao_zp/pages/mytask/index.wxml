                                           <image src="{{item.thumb}}"></image>
                                           </view>
                                           <view class="info">
                                          
                                                  <view class="companyinfo"> 
                                                        <view> {{item.companyname}} </view>
                                                        <view>{{item.address}}</view>
                                                  
                                                  </view>
                                                      <view class="jobmoney">
