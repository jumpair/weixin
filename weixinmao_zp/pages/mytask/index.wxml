                                                        <view>{{item.createtime}} </view>
                                                                                                               

                                                   </view>
                                            </view>
                                      </view>

                                      
                                        <block wx:if="{{item.noteinfo}}">
                                       <view class="notedetail">
                                           <view class="pic">
                                           <image src="{{item.noteinfo.avatarUrl}}"></image>
                                           </view>
                                           <view class="info">
                                          
                                                  <view class="companyinfo"> 
                                                        <view> {{item.noteinfo.name}} </view>
                                                        <view>{{item.noteinfo.name}}</view>
                                                  
                                                  </view>
