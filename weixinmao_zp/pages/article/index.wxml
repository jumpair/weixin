<view class="container">
        <view class="news" >
                  <view class="newslist" wx:if="{{item.status  == 1}}" wx:for-items="{{article}}">
                        <view class="pic" data-id="{{item.id}}">
                          <image src="{{item.avatar}}" style="width:50px;height:50px;"></image>
                        </view>
                        <view class="title" data-id="{{item.id}}">
                        <view style="margin-top:10px">
                          <view class="titles">{{item.title}}</view>

                            <image wx:if="{{item.ztai  == 1}}" class="img" src='../../resource/images/qi.png' style="width:20px;height:20px;"></image>

                            <view class="times">{{item.updatetime}}</view>
                        </view>
                          <view class="contents">{{item.content}}</view>
                             <view class="images_father">
                                <view class="images"  wx:for-items="{{item.picurl}}" >
                                        <image class="img" mode="widthFix" src='{{item}}'></image>
                                </view>
                            </view>
                    </view>
                  </view>
           
                  
        </view>
<!--news end-->
</view>