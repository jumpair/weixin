/* index.wxss */
page{
  background: #f5f5f5;
}
.container {
  min-height: 100%
}



.news{
margin-top:10rpx;
width:750rpx;
display: flex;
flex-direction: column;

}
.news .newstitle{
width:720rpx;
height: 40rpx;
line-height: 40rpx;
margin-left:20rpx;
font-size: .7rem;
border-bottom: 1rpx solid #ccc;
margin: 0 auto;

}

.news .newslist{
display: flex;
flex-direction: row;
width:700rpx;
margin: 0 auto;
border-bottom: 1px solid #F2f2f2; 
padding: 10rpx;

background: #FFF;
border-radius: 10rpx;
margin-bottom: 10rpx;
box-shadow: 5rpx 5rpx 9rpx #ddd7d7;


}
.news .newslist .select{
width:10%;
align-items: center;
justify-content: center;
display: flex;
}
.news .newslist .pic{
width:28%;
align-items: center;
justify-content: center;
display: flex;
}
.news .newslist .pic image{
 width:140rpx;
 height: 140rpx;
 border-radius: 8rpx;
}

.news .newslist .title{
width:62%;
flex-direction: column;
display: flex;
padding-top: 1%;
}
.news .newslist .title view{
  padding-left: 5%;
  text-align: left;

}

.news .newslist .title view:nth-child(1){
font-size: .8rem;
font-weight: bold;
margin-bottom: 20rpx;

}
.news .newslist .title view:nth-child(2){
font-size: .7rem;


}

.news .newslist .title view:nth-child(3){
font-size: .7rem;
color:#6a6a6a;


}


.weixinmao-float{ height: 150rpx;}
.weixinmao-foot{ 
  display:flex; 
  justify-content: center;
  flex-direction:row;
  position: fixed; 
  z-index: 999; 
  left: 0; 
  bottom: 0; 
  width: 100%; 
  }

.weixinmao-foot view{
color:#FFF;
height: 100rpx;
line-height: 100rpx;
font-size: .9rem;
width:50%;
border-radius: 0rpx;
text-align: center;
}

.weixinmao-foot view:nth-child(1){
color:#000;
align-self: center;
height: 100rpx;
line-height: 100rpx;
font-size: .8rem;
display: flex;
flex-direction: row;
background: #FFF;
width:450rpx;
padding-left:20rpx;
font-weight: 600;


}

.weixinmao-foot text{
  font-size: .7rem;
}

.weixinmao-foot button{
color:#FFF;
height: 100rpx;
line-height: 100rpx;
font-size: .9rem;
text-align: center;
width: 300rpx;
border-radius: 0rpx;
}

