.weixinmao-foot{ 
  display:flex; 
  justify-content: center;
  flex-direction:row;
  position: fixed; 
  z-index: 999; 
  left: 0; 
  bottom: 0; 
  width: 100%; 
  background: #1aac19;
  }



.weixinmao-foot view{
color:#FFF;
align-self: center;
height: 100rpx;
line-height: 100rpx;
font-size: .9rem;
display: flex;
width:28%;
border-radius: 0rpx;
flex-direction: row;


}
.weixinmao-foot view image{
width:70rpx;
height: 70rpx;
align-self: center;

}